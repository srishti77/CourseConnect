<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/timer_hint"
        android:textColorHint="@color/colorAccent"
        android:textSize="@dimen/timerHintLength" />

    <ImageView
        android:id="@+id/displayImage"
        android:layout_width="@dimen/microphonesize"
        android:layout_height="@dimen/microphonesize"
        android:layout_below="@+id/timerValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/microphonemargin"
        android:src="@mipmap/sound_waves" />

    <ImageView
        android:id="@+id/playOrpause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/displayImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:padding="10sp"
        android:background="@drawable/circle_background_purple"
        android:src="@drawable/ic_mic_black_24dp" />

    <ImageView
        android:id="@+id/pauseOrreplay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/displayImage"
       android:layout_toRightOf="@+id/playOrpause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:padding="10sp"
        android:layout_marginLeft="10sp"
        android:background="@drawable/circle_background_purple"
        android:src="@drawable/ic_pause_black_24dp" />

</RelativeLayout>
